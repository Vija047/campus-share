# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/student-notes-hub
# For MongoDB Atlas (production):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database-name

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_EXPIRE=7d

# Email Service Configuration (Choose one provider)

# Option 1: Gmail SMTP (for development/testing)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password  # Use App Password, not regular password

# Option 2: SendGrid (recommended for production)
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_USER=apikey
# EMAIL_PASS=your-sendgrid-api-key

# Option 3: Mailgun (alternative for production)
# EMAIL_HOST=smtp.mailgun.org
# EMAIL_PORT=587
# EMAIL_USER=postmaster@your-domain.mailgun.org
# EMAIL_PASS=your-mailgun-api-key

# Option 4: Amazon SES (for AWS users)
# EMAIL_HOST=email-smtp.us-east-1.amazonaws.com
# EMAIL_PORT=587
# EMAIL_USER=your-ses-smtp-username
# EMAIL_PASS=your-ses-smtp-password

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000
# For production:
# FRONTEND_URL=https://your-domain.com

# Server Configuration
PORT=5000
NODE_ENV=development
# For production:
# NODE_ENV=production

# Security Configuration
# Allowed origins for CORS
CORS_ORIGIN=http://localhost:3000
# For production with multiple domains:
# CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com

# Rate Limiting Configuration (optional overrides)
# RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
# RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window

# File Upload Configuration (if using cloud storage)
# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# AWS S3 (alternative for file storage)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name

# Additional Security (optional)
# BCRYPT_ROUNDS=12  # Default is 12, higher = more secure but slower
# OTP_EXPIRY_MINUTES=10  # Default is 10 minutes
# EMAIL_VERIFICATION_EXPIRY_HOURS=24  # Default is 24 hours
# ACCOUNT_LOCK_DURATION_HOURS=2  # Default is 2 hours
# MAX_LOGIN_ATTEMPTS=5  # Default is 5 attempts before lock

# Third-party API Keys (if using AI features)
OPENAI_API_KEY=your-openai-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Monitoring and Analytics (optional)
# SENTRY_DSN=your-sentry-dsn
# GOOGLE_ANALYTICS_ID=your-ga-id